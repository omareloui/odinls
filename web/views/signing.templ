package views

type RegisterFormData struct {
	FristName       FormInputData
	LastName        FormInputData
	Email           FormInputData
	Password        FormInputData
	ConfirmPassword FormInputData
}

type LoginFormData struct {
	Email    FormInputData
	Password FormInputData
}

templ Login(formdata *LoginFormData) {
	@baseLayout("Login | Odin LS") {
		@container() {
			@LoginForm(formdata)
		}
	}
}

templ LoginForm(formdata *LoginFormData) {
	@form("Login", "/login", "Login") {
		@input("Email", "email", "email", "email", formdata.Email)
		@input("Password", "password", "password", "password", formdata.Password)
	}
}

templ Register(formdata *RegisterFormData) {
	@baseLayout("Register | Odin LS") {
		@container() {
			@RegisterForm(formdata)
		}
	}
}

templ RegisterForm(formdata *RegisterFormData) {
	@form("Register", "/register", "Register") {
		<div class="grid grid-cols-2 gap-2">
			@input("First Name", "text", "firstName", "e.g. Omar", formdata.FristName)
			@input("Last Name", "text", "lastName", "e.g. Eloui", formdata.LastName)
		</div>
		@input("Email", "email", "email", "e.g. contact@omareloui.com", formdata.Email)
		@input("Password", "password", "password", "********", formdata.Password)
		@input("Confirm Password", "password", "cpassword", "********", formdata.ConfirmPassword)
	}
}
